{{> header }}

<div class="flex bg-gray-50 min-h-screen">
  <!-- Left Sidebar -->
  <div class="w-1/4 bg-white shadow-md p-6">
    <div class="min-w-[16rem] w-64 flex-shrink-0 flex flex-col">
        <div>
            {{> sideMenu user=user}}
        </div>
        <div class="mt-4">
            {{> groups user=user}}
        </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 p-6">
    <!-- Title -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Block List</h1>
      <div>
        <input
          type="text"
          placeholder="Search"
          class="px-4 py-2 border rounded-full focus:outline-none"
        />
      </div>
    </div>

    <!-- Table -->
    <div class="bg-white rounded-lg shadow">
      <table class="w-full text-left">
        <thead>
          <tr class="border-b">
            <th class="py-4 text-gray-500 text-center">Name</th>
            <th class="py-4 text-gray-500 text-center">Email</th>
            <th class="py-4 text-gray-500 text-center">Country</th>
            <th class="py-4 text-gray-500 text-center">Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each blockList}}
          <tr class="border-b hover:bg-gray-50" id="{{this.id}}">
            <td class="py-4 text-center font-medium">{{this.first_name}} {{this.last_name}}</td>
            <td class="py-4 text-center text-blue-500">{{this.email}}</td>
            <td class="py-4 text-center">{{#if this.userInfo.country}}{{this.userInfo.country}}{{else}}N/A{{/if}}</td>
            <td class="py-4 text-center">
              <button class="bg-red-100 text-red-600 px-4 py-1 rounded-full hover:bg-red-200">
                Unblock
              </button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    {{!-- <!-- Pagination -->
    <div class="flex justify-end gap-2 mt-6">
      <button class="px-3 py-1 text-gray-500">◀</button>
      <button class="px-3 py-1 bg-purple-600 text-white rounded-full">1</button>
      <button class="px-3 py-1 text-gray-500">2</button>
      <button class="px-3 py-1 text-gray-500">3</button>
      <button class="px-3 py-1 text-gray-500">4</button>
      <button class="px-3 py-1 text-gray-500">...</button>
      <button class="px-3 py-1 text-gray-500">▶</button>
    </div> --}}
  </div>
</div>
<script src="/js/block.js"></script>
