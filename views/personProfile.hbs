<style>
    .active {
        color: black;
    }
</style>

{{> header}}
<div class="m-10 flex justify-between">
    <!-- SideMenu -->
    <div class="mr-6 min-w-fit w-64 flex flex-col">
        <div>
            {{> sideMenu user=user}}
        </div>
        <div class="mt-4">
            {{> groups user=user}}
        </div>
    </div>
    <div class="flex-grow">
        <div class="flex flex-col border rounded-lg max-h-1/2">
            <div class="ml-8 flex-grow flex items-center">
                <img class="h-32 w-32 rounded-full m-8"
                    src="{{#if user.avatar}}{{user.avatar}}{{else}}images/avatar.png{{/if}}"
                    alt="{{user.avatar}}"></img>
                <div class="ml-8 mb-4 font-medium text-2xl">
                    {{#if user.name}}{{user.name}}{{else}}User Name{{/if}}
                </div>
                <div class="ml-auto flex ">
                    <div class="flex flex-col items-center mr-8">
                        <div class="text-3xl font-medium">
                            {{#if user.posts}}{{user.posts}}{{else}}0{{/if}}
                        </div>
                        <div>
                            Posts
                        </div>
                    </div>
                    <div class="flex flex-col items-center mr-8">
                        <div class="text-3xl font-medium">
                            {{#if user.followers}}{{user.followers.length}}{{else}}0{{/if}}
                        </div>
                        <div>
                            Followers
                        </div>
                    </div>
                    <div class="flex flex-col items-center mr-8">
                        <div class="text-3xl font-medium">
                            {{#if user.following}}{{user.following.length}}{{else}}0{{/if}}
                        </div>
                        <div>
                            Following
                        </div>
                    </div>
                </div>
            </div>
            <div class="flex border-t p-3 font-medium text-gray-600">
                <div id="myPost" class="tab-btn mr-6 ml-6 cursor-pointer active">
                    My Post
                </div>
                <div id="editProfile" class="tab-btn mr-6 ml-6 cursor-pointer">
                    Edit Profile
                </div>
                <div id="yourReviews" class="tab-btn mr-6 ml-6 cursor-pointer">
                    Your Reviews
                </div>
                <div id="setting" class="tab-btn mr-6 ml-6 cursor-pointer">
                    Setting
                </div>
            </div>
        </div>
        <div class="flex mt-8">
            <div id="tab" class="flex-grow w-1/2 mr-6 flex flex-col">
                

            </div>
            {{> suggestedFriends user=user}}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        const tab = 'My post';

        $('#myPost').on('click', function () {
            $('.tab-btn').removeClass('active');
            $(this).addClass('active');
            changeTab('My post');
        });

        $('#editProfile').on('click', function () {
            $('.tab-btn').removeClass('active');
            $(this).addClass('active');
            changeTab('Edit Profile');
        }); 

        $('#yourReviews').on('click', function () {
            $('.tab-btn').removeClass('active');
            $(this).addClass('active');
            changeTab('Your Reviews');
        });

        $('#setting').on('click', function () {
            $('.tab-btn').removeClass('active');
            $(this).addClass('active');
            changeTab('Setting');
        });

        let renderData = '';

        function changeTab(tab) {
            switch (tab) {
                case 'My post':
                    renderData = `
                    <div class="w-full flex flex-col overflow-auto scroll-custom border rounded-lg" style="height:36rem">
                        {{!-- {{#each user.post}} --}}
                        {{> post user=user}}
                        {{> post user=user}}

                        {{!-- {{/each}} --}}
                    </div>
                    `
                    break;
                case 'Edit Profile':
                    renderData = `
                    <div class="grid grid-cols-10 gap-8 pl-9">

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Name:</div>
                        <div class="col-span-7 text-lg text-gray-900 text-start">
                            {{#if user.name}}{{user.name}}{{else}}User Name{{/if}}
                        </div>

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Birthday:</div>
                        <div class="col-span-7 text-lg text-gray-900">
                            {{#if user.birthday}}{{user.birthday}}{{else}}User Birthday{{/if}}
                        </div>

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Email:</div>
                        <div class="col-span-7 text-lg text-gray-900">
                            {{#if user.email}}{{user.email}}{{else}}User Email{{/if}}
                        </div>

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Phone number:</div>
                        <div class="col-span-7 text-lg text-gray-900">
                            {{#if user.phone}}{{user.phone}}{{else}}User Phone Number{{/if}}
                        </div>

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Address:</div>
                        <div class="col-span-7 text-lg text-gray-900">
                            {{#if user.address}}{{user.address}}{{else}}User Address{{/if}}
                        </div>

                        <div class="col-span-3 font-semibold text-lg text-black text-end">Education:</div>
                        <div class="col-span-7 text-lg text-gray-900">
                            {{#if user.education}}{{user.education}}{{else}}User Education{{/if}}
                        </div>
                    </div>
                    `
                    break;
                case 'Your Reviews':
                    
                    break;
                case 'Setting':
            }
            $('#tab').html(renderData);
        }
        changeTab(tab);
    });
</script>