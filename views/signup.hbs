        </div> --}}

        <!-- Continue Button -->
        <button class="w-full p-3 text-white bg-gradient-to-r from-[#AD49E1] to-[#873DEC] h-[44px] font-medium rounded-md cursor-pointer mt-10">
            Continue
        </button>

        <!-- Footer -->
        <div class="text-sm text-[#4B5669] mt-5">
            Have an account? <a href="/login" class="text-black font-medium">Login</a>
        </div>
    </div>
