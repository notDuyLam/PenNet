<body class="bg-[#FAFBFF] font-[Inter, sans-serif] flex justify-center items-center m-0 flex-col">
    <!-- Logo and Title above the container -->
    <div class="m-5 flex items-center gap-3 mb-15">
        <div class="w-8 h-8 bg-[#893EBF] rounded-full flex justify-center items-center">
            <img src="images/logo.png" alt="PenNet Logo" class="w-8 h-8">
        </div>
        <h1 class="text-lg font-extrabold text-[#0C1024] m-0">PenNet</h1>
    </div>

    <div class="w-[384px] h-[600px] bg-white border border-[#ECF0F5] shadow-sm rounded-lg p-8 box-border text-center mt-[30px]">
        <!-- Social Login Button -->
        <div class="flex justify-center items-center gap-2 w-full h-[44px] border border-[#ECF0F5] rounded-md bg-white text-[#5D6778] text-sm cursor-pointer">
            <img src="images/google.png" alt="Google icon" class="w-4 h-4">
            Login with Google
        </div>
        
        <!-- OR divider -->
        <div class="flex items-center text-center text-[#5D6778] gap-3 mt-10">
            <div class="w-full h-[1px] bg-[#ECF0F5]"></div>
            <span>OR</span>
            <div class="w-full h-[1px] bg-[#ECF0F5]"></div>
        </div>
        
        <!-- Input fields -->
        <input type="text" class="w-full p-2 border border-[#ECF0F5] rounded-md text-sm text-[#707988] mt-5" placeholder="Name">
        <input type="email" class="w-full p-2 border border-[#ECF0F5] rounded-md text-sm text-[#707988] mt-5" placeholder="Email">
        <input type="text" class="w-full p-2 border border-[#ECF0F5] rounded-md text-sm text-[#707988] mt-5" placeholder="Username">
        <input type="password" class="w-full p-2 border border-[#ECF0F5] rounded-md text-sm text-[#707988] mt-5" placeholder="Password">
        
