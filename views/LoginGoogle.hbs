<body class="bg-[#FAFBFF] flex justify-center items-center m-0 flex-col">
    <!-- Logo and Title above the container -->
    {{> logoLogin}}

    <div class="w-[384px] h-[399px] bg-white border border-[#ECF0F5] shadow-sm rounded-lg p-10 box-border text-center mt-[80px]">
        <a class="block mt-8 text-[16px] text-[#0C1024] no-underline">Enter your email</a>
        <a class="block mt-8 text-[12px] text-[#5D6778] no-underline">We'll send a secure link for instant access to your account.</a>
        <!-- Email -->
        <input type="Email" class="mt-5 w-full p-3 border border-[#ECF0F5] rounded-md box-border text-[14px] text-[#707988]" placeholder="Email">
        <!-- Login Button -->
        <button class="w-full p-3 text-[16px] text-white bg-gradient-to-r from-[#AD49E1] to-[#873DEC] h-[44px] font-bold rounded-md cursor-pointer mt-8 border-none">Send link</button>
    </div>
</body>