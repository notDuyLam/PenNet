{{> header}}
<div class="m-10 flex">
    <!-- SideMenu -->
    <div class="mr-6 flex-shrink-0 flex flex-col">
        <div>
            {{> sideMenu user=user}}
        </div>
    </div>

    <div class="profile mr-6 min-w-[16rem] w-full flex flex-col bg-white shadow-md rounded-lg p-12">
        <div class="flex flex-wrap justify-between">
            <div class="w-full lg:w-1/2 mb-4 lg:mb-0">
                <div class="section-heading mb-4">
                    <h2 class="text-3xl font-bold">Profile</h2>
                    <span class="text-gray-600 block mt-2">Modify your profile information below. Ensure that your details are accurate and up-to-date to maintain the integrity of your account.</span>     
                    
                    </div>

                    <form id="profile-form" action="/users/profile">
                        <div class="flex mb-4">
                            <div class="form-group w-1/2 pr-2">
                                <label for="first_name" class="block text-gray-700 p-2 text-lg font-bold">First Name</label>
                                <input name="first_name" type="text" id="first_name" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your first name" value="{{user.first_name}}" readonly disabled>
                            </div>
                            <div class="form-group w-1/2 pl-2">
                                <label for="last_name" class="block text-gray-700 p-2 text-lg font-bold">Last Name</label>
                                <input name="last_name" type="text" id="last_name" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your last name" value="{{user.last_name}}" readonly disabled>
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="email" class="block text-gray-700 p-2 text-lg font-bold">Email</label>
                            <input name="email" type="email" id="email" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your email" value="{{user.email}}" readonly disabled>
                        </div>
                    </form>

                    <form id="password-form" class="hidden mt-6" action="/users/change-password">
                        <div class="form-group mb-4">
                            <label for="current_password" class="block text-gray-700 p-2 text-lg font-bold">Current Password</label>
                            <input name="current_password" type="password" id="current_password" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your current password">
                        </div>
                        <div class="form-group mb-4">
                            <label for="new_password" class="block text-gray-700 p-2 text-lg font-bold">New Password</label>
                            <input name="new_password" type="password" id="new_password" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your new password">
                        </div>
                        <div class="form-group mb-4">
                            <label for="confirm_password" class="block text-gray-700 p-2 text-lg font-bold">Confirm New Password</label>
                            <input name="confirm_password" type="password" id="confirm_password" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Confirm your new password">
                        </div>
                        <div class="flex justify-center">
                            <button type="submit" class="mt-5 bg-green-500 text-white py-2 px-4 rounded w-2/3 mx-2">
                                Change Password
                            </button>
                        </div>
                    </form>
                    
                    <div class="flex justify-center">
                        <button id="edit-button" class="mt-5 bg-blue-500 text-white py-2 px-4 rounded w-1/3 mx-2">
                            Edit Information
                        </button>
                        <button id="save-button" class="mt-5 bg-green-500 text-white py-2 px-4 rounded hidden w-1/3 mx-2">
                            Save Information
                        </button>
                        <button id="change-password-button" class="mt-5 bg-red-500 text-white py-2 px-4 rounded w-1/3 mx-2">
                            Change Password
                        </button>
                    </div>

                </div>
            <div class="w-full lg:w-1/3 p-4">
                <div class="profile-image" style="width: 450px; height: 450px; overflow: hidden;">
                    <img src="{{user.avatar}}" alt="Profile" 
                        class="rounded-lg shadow-md object-cover" 
                        style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <button id="upload-button" class="mt-4 bg-blue-500 text-white py-2 px-4 rounded w-full">
                    Upload Image
                </button>
                <button id="upload-button" class="mt-4 bg-red-500 text-white py-2 px-4 rounded w-full save hidden">
                    Save Image
                </button>
                <input type="file" id="file-input" class="hidden" accept="image/*">
            </div>
        </div>
    </div>
</div>
<script src="/js/profile.js"></script>