{{> header}}
<div class="m-10 flex">
    <!-- SideMenu -->
    <div class="mr-6 min-w-[16rem] w-64 flex-shrink-0 flex flex-col">
        <div>
            {{> sideMenu user=user}}
        </div>
    </div>

    <div class="profile mr-6 min-w-[16rem] w-full flex flex-col bg-white shadow-md rounded-lg p-12">
        <div class="flex flex-wrap justify-between">
            <div class="w-full lg:w-1/2 mb-4 lg:mb-0">
                <div class="section-heading mb-4">
                    <h2 class="text-3xl font-bold">Profile</h2>
                    <span class="text-gray-600 block mt-2">Modify your profile information below. Ensure that your details are accurate and up-to-date to maintain the integrity of your account.</span>     
                    
                    </div>
                    
                    <form id="profile-form" action="/users/profile">
                        <div class="form-group mb-4">
                            <label for="name" class="block text-gray-700 p-2 text-lg font-bold">Name</label>
                            <input name="name" type="text" id="name" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your first name" value="{{user.name}}" readonly disabled>
                        </div>
                        <div class="form-group mb-4">
                            <label for="username" class="block text-gray-700 p-2 text-lg font-bold">Username</label>
                            <input name="username" type="text" id="username" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your username" value="{{user.username}}" readonly disabled>
                        </div>
                        <div class="form-group mb-4">
                            <label for="email" class="block text-gray-700 p-2 text-lg font-bold">Email</label>
                            <input name="email" type="email" id="email" class="form-control border rounded w-full py-2 px-3 text-gray-700" placeholder="Enter your email" value="{{user.email}}" readonly disabled>
                        </div>
                    </form>
                </div>
            <div class="w-full lg:w-1/3 p-4">
                <div class="profile-image" style="width: 450px; height: 450px; overflow: hidden;">
                    <img src="{{user.avatar}}" alt="Profile" 
                        class="rounded-lg shadow-md object-cover" 
                        style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <button id="upload-button" class="mt-4 bg-blue-500 text-white py-2 px-4 rounded w-full">
                    Upload Image
                </button>
                <input type="file" id="file-input" class="hidden" accept="image/*">
            </div>
        </div>
    </div>
</div>
<script src="/js/profile.js"></script>