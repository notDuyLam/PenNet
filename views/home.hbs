{{> header}}
<div class="m-10 flex">
    <!-- SideMenu -->
    <div class="mr-6 min-w-[16rem] w-64 flex-shrink-0 flex flex-col">
        <div>
            {{> sideMenu user=user}}
        </div>
        <div class="mt-4">
            {{> groups user=user}}
        </div>
    </div>

    <div class="flex-grow w-1/2 mr-6 flex flex-col">
        <div class="w-full p-4 mb-8 rounded-lg flex flex-col bg-violet-200"> 
            <div class="flex items-center mb-4">
                <img class="h-16 w-16 rounded-full ml-4 mr-4" 
                src="{{#if user.avatar}}{{user.avatar}}{{else}}/images/avatar.png{{/if}}" 
                alt="user-avatar"
                />

                <textarea 
                    class="flex-grow bg-inherit placeholder-gray-700 outline-none flex-warp mr-8 
                        overflow-auto resize-none scroll-custom" 
                    placeholder="What 's on your mind?"
                ></textarea>
            </div>
            <div class="flex justify-around">
                <button>
                    <i class="fa-solid fa-image"></i>
                    Add Media
                </button>
                <button class="rounded-xl pl-4 pr-4 pt-0.5 pb-0.5 bg-violet-700 text-white">
                    Post
                </button>
            </div>
        </div>
        <div class="w-full flex flex-col overflow-auto scroll-custom border rounded-lg" style="height:36rem">
            {{!-- {{#each user.post}} --}}
            {{> post user=user}}
            {{> post user=user}}
            {{!-- {{/each}} --}}
        </div>
    </div>
    
    {{> suggestedFriends user=user}}
</div>