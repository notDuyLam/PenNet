<div class="relative">
    <button id="toggleBtnGroupMenu" class="md:hidden p-2 m-2 border rounded focus:outline-none">
        <i class="fa-solid fa-people-group"></i>
    </button>
    <div id="groupMenu" class="small-menu hidden md:static md:block border rounded flex flex-col flex-grow min-w-[16rem] w-64 bg-white ">
        <div class="border-b p-4 pl-8 pr-2 text-lg">
            <div class="flex justify-between items-center font-bold">
                Groups
                <div class="flex rounded-2xl bg-violet-400 font-normal text-white pl-4 p-1 items-center">
                    Create
                    <div class="rounded-full h-6 w-6 ml-2 flex justify-center bg-white items-center text-black">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                </div>

            </div>
        </div>
        <div class="flex flex-col pt-4">
            {{!-- {{#each user.groups}} --}}
            <div class="flex m-4 ml-8">
                <img class="rounded-full w-8 h-8 mr-4" src="{{user.avatar}}" />
                <div>
                    <div>
                        {{user.first_name}}
                        {{user.last_name}}
                    </div>
                </div>
            </div>
            {{!-- {{/each}} --}}
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#toggleBtnGroupMenu').click(function (e) {
            $('.small-menu:not(#groupMenu)').addClass('hidden');
            $('.small-menu:not(#groupMenu)').removeClass('absolute');

            $('#groupMenu').toggleClass('hidden');
            $('#groupMenu').toggleClass('absolute');
            e.stopPropagation();
        });
        $(document).on('click', function (e) {
            if (!$(e.target).closest('#groupMenu').length) {
                if ($('#groupMenu').hasClass('hidden')) {
                    return;
                }
                $('#groupMenu').toggleClass('hidden');
                $('#groupMenu').toggleClass('absolute');
            }
        })
    })
</script>